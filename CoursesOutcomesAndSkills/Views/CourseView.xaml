<UserControl x:Class="CoursesOutcomesAndSkills.Views.CourseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             xmlns:local="clr-namespace:CoursesOutcomesAndSkills.Views"
             mc:Ignorable="d"
             DataContext="{Binding CourseViewModel, Source={StaticResource Locator}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="courseHeader"
               TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsPrerequisiteToCurrentCourse, diag:PresentationTraceSources.TraceLevel=High}"
                             Value="True">
                    <Setter Property="Background"
                            Value="Yellow" />
                    <Setter Property="FontSize"
                            Value="60" />
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="FontWeight"
                    Value="Bold" />
        </Style>
        <DataTemplate x:Key="courseTemplate">
            <Border CornerRadius="3"
                    Margin="0,1"
                    HorizontalAlignment="Stretch"
                    BorderThickness="1"
                    BorderBrush="Blue">
                <StackPanel Margin="3">
                    <TextBlock Text="{Binding CourseNumber}"
                               Name="courseHeaderTextblock"
                               Style="{StaticResource courseHeader}"/>
                    <TextBlock Text="{Binding Title}"
                               TextWrapping="Wrap" />
                    <TextBlock Text="{Binding IsPrerequisiteToCurrentCourse, StringFormat='IsPrereq: {0}'}" />
                </StackPanel>
            </Border>
        </DataTemplate>
        <Style TargetType="ListBox"
               x:Key="courseList">
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Disabled" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
        </Style>
        <Style x:Key="semesterHeader"
               TargetType="TextBlock">
            <Setter Property="FontWeight"
                    Value="Medium" />
            <Setter Property="FontSize"
                    Value="14px" />
            <Setter Property="Margin"
                    Value="4,3,0,2" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="350" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Pre-Requisites"
                   Style="{StaticResource semesterHeader}"/>
        <ListView Grid.Row="1"
                  ItemsSource="{Binding PreReqCourses}"
                  ItemTemplate="{StaticResource courseTemplate}"
                  Style="{StaticResource courseList}"
                  SelectedItem="{Binding SelectedCourse, Mode=TwoWay}" />

        <TextBlock Text="Year 1 - Fall"
                   Grid.Column="1"
                   Style="{StaticResource semesterHeader}" />
        <ListView Grid.Row="1"
                  Grid.Column="1"
                  ItemsSource="{Binding Year1Fall}"
                  ItemTemplate="{StaticResource courseTemplate}"
                  Style="{StaticResource courseList}"
                  SelectedItem="{Binding SelectedCourse, Mode=TwoWay}" />


        <TextBlock Text="Year 1 - Spring"
                   Grid.Row="2"
                   Grid.Column="1"
                   Style="{StaticResource semesterHeader}" />
        <ListView Grid.Row="3"
                  Grid.Column="1"
                  ItemsSource="{Binding Year1Spring}"
                  ItemTemplate="{StaticResource courseTemplate}"
                  Style="{StaticResource courseList}"
                  SelectedItem="{Binding SelectedCourse, Mode=TwoWay}" />

        <TextBlock Text="Year 2 - Fall"
                   Grid.Column="2"
                   Style="{StaticResource semesterHeader}" />
        <ListView Grid.Row="1"
                  Grid.Column="2"
                  ItemsSource="{Binding Year2Fall}"
                  ItemTemplate="{StaticResource courseTemplate}"
                  Style="{StaticResource courseList}"
                  SelectedItem="{Binding SelectedCourse, Mode=TwoWay}" />


        <TextBlock Text="Year 2 - Spring"
                   Grid.Row="2"
                   Grid.Column="2"
                   Style="{StaticResource semesterHeader}" />
        <ListView Grid.Row="3"
                  Grid.Column="2"
                  ItemsSource="{Binding Year2Spring}"
                  ItemTemplate="{StaticResource courseTemplate}"
                  Style="{StaticResource courseList}"
                  SelectedItem="{Binding SelectedCourse, Mode=TwoWay}" />

        <TextBlock Text="Year 3 - Fall"
                   Grid.Column="3"
                   Style="{StaticResource semesterHeader}" />
        <ListView Grid.Row="1"
                  Grid.Column="3"
                  ItemsSource="{Binding Year3Fall}"
                  ItemTemplate="{StaticResource courseTemplate}"
                  Style="{StaticResource courseList}"
                  SelectedItem="{Binding SelectedCourse, Mode=TwoWay}" />


        <TextBlock Text="Year 3 - Spring"
                   Grid.Row="2"
                   Grid.Column="3"
                   Style="{StaticResource semesterHeader}" />
        <ListView Grid.Row="3"
                  Grid.Column="3"
                  ItemsSource="{Binding Year3Spring}"
                  ItemTemplate="{StaticResource courseTemplate}"
                  Style="{StaticResource courseList}"
                  SelectedItem="{Binding SelectedCourse, Mode=TwoWay}" />

        <TextBlock Text="Year 4 - Fall"
                   Grid.Column="4"
                   Style="{StaticResource semesterHeader}" />
        <ListView Grid.Row="1"
                  Grid.Column="4"
                  ItemsSource="{Binding Year4Fall}"
                  ItemTemplate="{StaticResource courseTemplate}"
                  Style="{StaticResource courseList}"
                  SelectedItem="{Binding SelectedCourse, Mode=TwoWay}" />


        <TextBlock Text="Year 4 - Spring"
                   Grid.Row="2"
                   Grid.Column="4"
                   Style="{StaticResource semesterHeader}" />
        <ListView Grid.Row="3"
                  Grid.Column="4"
                  ItemsSource="{Binding Year4Spring}"
                  ItemTemplate="{StaticResource courseTemplate}"
                  Style="{StaticResource courseList}"
                  SelectedItem="{Binding SelectedCourse, Mode=TwoWay}" />

        <GridSplitter Grid.Column="5"
                      Width="3"
                      Grid.RowSpan="4"
                      HorizontalAlignment="Left"
                      Margin="2,0"
                      Background="LightGray" />

        <Grid Grid.Column="5"
              Grid.RowSpan="4"
              Margin="10,5,5,5"
              DataContext="{Binding SelectedCourse}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding CourseNumber}"
                       FontWeight="Bold"
                       FontSize="12pt"/>
            <TextBlock Text="{Binding Title}"
                       Grid.ColumnSpan="2"
                       FontWeight="Medium"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Semester}"
                       FontStyle="Italic"
                       Grid.Column="1"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"/>
            <Border Grid.ColumnSpan="2"
                    VerticalAlignment="Bottom"
                    BorderThickness="1"
                    Margin="0,0,0,-5"
                    BorderBrush="DarkGray" />

            <TextBlock Text="{Binding Summary, TargetNullValue='[ No Summary Provided ]'}"
                       TextWrapping="Wrap"
                       Margin="0,10,0,0"
                       Grid.Row="1"
                       Grid.ColumnSpan="2"/>

            <TextBlock Text="Learning Outcomes"
                       FontWeight="Bold"
                       Grid.Row="2" />

            <ItemsControl Grid.Row="3"
                          Grid.ColumnSpan="2"
                          ItemsSource="{Binding Outcomes}"
                          ItemTemplate="{StaticResource OutcomeTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
