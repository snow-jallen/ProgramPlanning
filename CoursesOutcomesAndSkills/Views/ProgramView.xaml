<UserControl x:Class="CoursesOutcomesAndSkills.Views.ProgramView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CoursesOutcomesAndSkills.Views"
             mc:Ignorable="d"
             DataContext="{Binding ProgramViewModel, Source={StaticResource Locator}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="objectiveDisplay">

        </DataTemplate>
        <Style x:Key="reportListBox"
               TargetType="ListBox">
            <Setter Property="Margin"
                    Value="5,0,5,5" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Outcomes &amp; Skills"
                   Style="{StaticResource sectionHeading}" />
        <TextBlock Text="Pre."
                   Grid.Column="1"
                   Style="{StaticResource sectionHeading}" />
        <TextBlock Text="Selected"
                   Grid.Column="2"
                   Style="{StaticResource sectionHeading}" />
        <TextBlock Text="Post"
                   Grid.Column="3"
                   Style="{StaticResource sectionHeading}" />

        <Border Grid.Row="1"
                BorderThickness="1"
                BorderBrush="LightSlateGray"
                Margin="5,0,5,5">
            <Grid x:Name="OutcomesGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Text="Filter"
                           Margin="2,2,0,0" />
                <TextBox Text="{Binding ObjectivesFilter, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Row="1"
                         Margin="0,0,0,5" />
                <ListBox ItemsSource="{Binding Outcomes}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Grid.Row="2">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}"
                                           TextWrapping="Wrap" />
                                <TextBlock Text="Associated Skills:"
                                           Margin="5,2,2,0"
                                           FontWeight="Medium"/>
                                <ItemsControl Margin="5,0,2,2"
                                         ItemsSource="{Binding Skills}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <ListBox Grid.Row="1"
                 Grid.Column="1"
                 Style="{StaticResource reportListBox}">

        </ListBox>
        <ListBox Grid.Row="1"
                 Grid.Column="2"
                 Style="{StaticResource reportListBox}">

        </ListBox>
        <ListBox Grid.Row="1"
                 Grid.Column="3"
                 Style="{StaticResource reportListBox}">

        </ListBox>
    </Grid>
</UserControl>
